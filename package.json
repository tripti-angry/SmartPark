{
  "name": "smart-parking-system",
  "version": "1.0.0",
  "description": "Smart Parking Management System with IoT simulation",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
